    choroplethr (>= 3.5.2),
    choroplethrMaps (>= 1.0.0),
    dplyr (>= 0.5.0),
    ggplot2 (>= 2.1.0),
    Hmisc (>= 4.0.0),
    lubridate (>= 1.6.0),
    plyr (>= 1.8.4),
    survival (>= 2.40.1),
    weathermetrics (>= 1.2.2)
LazyData: TRUE
RoxygenNote: 5.0.1
Depends:
    R (>= 2.10)
